<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cz.vspj.schrek.im.activity.LoginAcitivty"
>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vspj_logo"
            android:id="@+id/vspj_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
    />

    <TextView
            android:text="Messenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_messenger"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textColor="#C40233"
            android:layout_below="@id/vspj_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
    />

    <TextView
            android:text="uživatel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_username_input"
            android:textColor="#C40233"
            android:textStyle="bold"
            android:layout_below="@+id/text_messenger"
            android:layout_alignStart="@+id/input_username"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
    />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress|textPersonName"
            android:hint="username"
            android:ems="10"
            tools:layout_editor_absoluteY="243dp"
            tools:layout_editor_absoluteX="85dp"
            android:id="@+id/input_username"
            android:layout_below="@id/label_username_input"
            android:layout_centerHorizontal="true"
    />


    <TextView
            android:text="heslo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_password_input"
            android:textColor="#C40233"
            android:textStyle="bold"
            android:layout_below="@id/input_username"
            android:layout_alignStart="@+id/input_password"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
    />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="heslo"
            android:ems="10"
            tools:layout_editor_absoluteY="341dp"
            tools:layout_editor_absoluteX="85dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/label_password_input"
            android:id="@id/input_password"
            android:inputType="textPassword"/>

    <Button
            android:text="Přihlásit"
            android:layout_width="132dp"
            android:layout_height="44dp"
            android:id="@+id/button_login"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/input_password"
            android:layout_marginTop="30dp"
    />

</RelativeLayout>
