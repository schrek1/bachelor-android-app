<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
    >
        <ImageView
                android:id="@+id/meetup_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="#035310"

        />
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/meetup_icon"
                        android:layout_centerVertical="true"
        >
            <TextView
                    android:id="@+id/meetup_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dummy username"
                    android:textStyle="bold"
                    android:textSize="17dp"

            />
            <TextView
                    android:id="@+id/meetup_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dummy text dummy text"
                    android:layout_below="@id/meetup_title"
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"
            />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>