<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="cz.vspj.schrek.im.fragment.messages.ConversationListFragment">

    <ListView android:id="@+id/meetupList"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_above="@+id/addMeetup"
              android:divider="#82cfcfcf"
              android:dividerHeight="1dp"

    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/notFoundLabel"
              android:layout_centerInParent="true"
              android:textAlignment="center"
              android:text="Žádné naplánované schůzky"
              android:visibility="gone"

    />

    <android.support.design.widget.FloatingActionButton
            android:id="@id/addMeetup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_dialog_alert"/>

</RelativeLayout>